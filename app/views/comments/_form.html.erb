
<% if @post.comments.last != nil %>
  <% if @post.comments.last.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@post.comments.last.errors.count, "error") %>
        prohibited this comment from being saved:
      </h2>
      <ul>
        <% @post.comments.last.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

<%= form_with(model: [@post, @post.comments.build ], local: true) do |form| %>
<p>
  <%= form.label :user %>
  <%= form.text_field :user %>
</p>
<p>
  <%= form.label :body %>
  <%= form.text_field :body %>
</p>
<p>
  <%= form.submit %>
</p>
<% end %>