
<h1>New Post</h1>

<%= form_with scope: :post, url: posts_path, local: true do |form| %>
  <p>
    <%= form.label :photo %><br>
    <%= form.text_field :photo %>
  </p>

  <p>
    <%= form.label :description %><br>  
    <%= form.text_field :description %>  
  </p>

  <p>
    <%= form.submit %>
  </p>
  <% end %>